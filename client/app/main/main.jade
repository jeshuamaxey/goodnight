    h2 Tonight's Quest
    h1.pace 1.8
      span units/hr
    h4 tonight's pace
  .row
    .col-xs-4
      h3.row {{7}}
      .row time elapsed
    .col-xs-4
      h3.row {{28 | currency : '£'}}
      .row.units current spend
