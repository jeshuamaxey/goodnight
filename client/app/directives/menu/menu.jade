  .col-xs-7.drink-name(ng-click="addDrinkToPurchase($index)") {{drink.name}}
  .col-xs-3.drink-price {{drink.price | currency : 'Â£'}}
  .col-xs-2.drink-quantity
    span.glyphicon.glyphicon-remove(ng-show="drink.quantity > 0", ng-click="removeDrinkFromPurchase($index)")
    | {{drink.quantity || 0}}
.sticky-footer
  a.btn.btn-danger( ng-click="sendPurchase($event)") Continue
